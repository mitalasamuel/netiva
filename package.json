{
  "name": "schoolmanagementapp",
  "main": "expo-router/entry",
  "version": "1.0.0",
  "scripts": {
    "start": "expo start",
    "start:app": "./scripts/start-app.sh",
    "auto-start": "./scripts/auto-start.sh",
    "start:full": "concurrently \"npm run backend:start\" \"npm run start\"",
    "backend:start": "cd backend && pm2 start ecosystem.config.js",
    "backend:stop": "cd backend && pm2 stop school-management-server",
    "backend:restart": "cd backend && pm2 restart school-management-server",
    "backend:logs": "cd backend && pm2 logs school-management-server",
    "backend:status": "cd backend && pm2 status",
    "backend:dev": "cd backend &&  npm run dev",
    "setup:pm2": "./scripts/setup-pm2-startup.sh",
    "setup:android": "./scripts/setup-android.sh",
    "verify:production": "node ./scripts/verify-production-readiness.js",
    "verify:store": "node ./scripts/verify-store-readiness.js",
    "reset-project": "node ./scripts/reset-project.js",
    "android": "expo run:android",
    "ios": "expo run:ios",
    "web": "expo start --web",
    "lint": "expo lint",
    "build:ios": "eas build --platform ios --profile production",
    "build:android": "eas build --platform android --profile production",
    "build:all": "eas build --platform all --profile production",
    "build:preview": "eas build --platform all --profile preview",
    "submit:ios": "eas submit --platform ios",
    "submit:android": "eas submit --platform android",
    "submit:all": "eas submit --platform all",
    "prebuild": "expo prebuild",
    "prebuild:ios": "expo prebuild --platform ios",
    "prebuild:android": "expo prebuild --platform android",
    "prebuild:clean": "expo prebuild --clean"
  },
  "dependencies": {
    "@expo/vector-icons": "^14.1.0",
    "@react-native-async-storage/async-storage": "^2.2.0",
    "@react-navigation/bottom-tabs": "^7.3.10",
    "@react-navigation/elements": "^2.3.8",
    "@react-navigation/stack": "^7.4.7",
    "axios": "^1.11.0",
    "expo": "~53.0.22",
    "expo-blur": "~14.1.5",
    "expo-constants": "~17.1.7",
    "expo-font": "~13.3.2",
    "expo-haptics": "~14.1.4",
    "expo-image": "~2.4.0",
    "expo-linking": "~7.1.7",
    "expo-router": "~5.1.5",
    "expo-splash-screen": "~0.30.10",
    "expo-status-bar": "~2.2.3",
    "expo-symbols": "~0.4.5",
    "expo-system-ui": "~5.0.11",
    "expo-web-browser": "~14.2.0",
    "react": "19.0.0",
    "react-dom": "19.0.0",
    "react-native": "0.79.6",
    "react-native-gesture-handler": "~2.24.0",
    "react-native-reanimated": "~3.17.4",
    "react-native-safe-area-context": "5.4.0",
    "react-native-screens": "~4.11.1",
    "react-native-web": "~0.20.0",
    "react-native-webview": "13.13.5"
  },
  "devDependencies": {
    "@babel/core": "^7.25.2",
    "@react-navigation/native": "^7.1.17",
    "@types/react": "~19.0.10",
    "@types/react-navigation": "^3.0.8",
    "concurrently": "^8.2.2",
    "eslint": "^9.25.0",
    "eslint-config-expo": "~9.2.0",
    "pm2": "^5.3.0",
    "typescript": "~5.8.3"
  },
  "private": true
}
